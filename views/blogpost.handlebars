<div class="text-right">
  <h2>{{blogPost.title}}</h2>
  <p>{{blogPost.contents}}</p>
  <p>Created by {{blogPost.user.username}}</p>
  <p>{{format_date blogPost.updatedAt}}</p>
{{#each blogPost}}
<p>{{comment.comment}}</p>
{{/each}}
  
</div>



<div class="row mt-4">
  <div class="col-md-6">
    <h3>Comment on this Blog Post:</h3>

    <form class="form new-comment-form">
    
      <div class="form-group">
        <label for="comment-content">comment:</label>
        <textarea class="form-input" id="comment-content" name="comment-content"></textarea>
      </div>
      
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Comment</button>
      </div>
    </form>
  </div>

  <script src="/js/comment.js"></script>