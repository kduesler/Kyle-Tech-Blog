

<div class="card">
  <h5 class="card-header">{{blogPost.title}}</h5>
  <div class="card-body">
    <h5 class="card-title">{{blogPost.contents}}</h5>
    <p class="card-text">Created by {{blogPost.user.username}}</p>
    <p class="card-text">{{format_date blogPost.updatedAt}}</p>

{{#each blogPost.comments}}
<p class="card-text">{{comment}}</p>
<p class="card-text">{{user.username}}</p>
{{/each}}


    {{#if logged_in}}
<div class="row mt-4">
  <div class="col-md-6">
    <h3>Comment on this Blog Post:</h3>

    <form class="form new-comment-form">
    
      <div class="form-group">
        <label for="comment-content">comment:</label>
        <textarea class="form-input" id="comment-content" name="comment-content"></textarea>
      </div>
      
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Comment</button>
      </div>
    </form>
  </div>
  {{/if}}
  </div>
</div>
</div>
  

  <script src="/js/comment.js"></script>